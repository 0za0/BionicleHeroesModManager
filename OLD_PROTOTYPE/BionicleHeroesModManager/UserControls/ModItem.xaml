<UserControl x:Class="BionicleHeroesModManager.UserControls.ModItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BionicleHeroesModManager.UserControls"
             mc:Ignorable="d" Height="100" Width="350"
             DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <StackPanel Orientation="Horizontal" Width="350">
        <Image Source="{Binding ModImg}" Height="100" Width="100"/>
        <Label   FontSize="20" HorizontalAlignment="Stretch" VerticalAlignment="Center" Width="200">
            <Label.Content>
                <AccessText TextWrapping="Wrap" Text="{Binding ModTitle}"/>
            </Label.Content>
        </Label>

    </StackPanel>
</UserControl>
