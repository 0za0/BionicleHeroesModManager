<Window x:Class="BionicleHeroesModManager.View.ModDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BionicleHeroesModManager.View"
        mc:Ignorable="d"
        Title="Install Mod" Height="450" Width="800" Loaded="Window_Loaded"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <Button Content="Install" Margin="590,362,10,10"/>
        <Image Source="http://www.ximagic.com/g_im_graytests/testGrid_h8w8.png" HorizontalAlignment="Left" Height="334" Margin="10,46,0,0" VerticalAlignment="Top" Width="321"/>
        <Label x:Name="ModLabel" Content="Test Mod Name" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top" Height="41" Width="297" FontSize="22"/>
        <TextBlock x:Name="DescriptionText" HorizontalAlignment="Left" Margin="390,46,0,0" TextWrapping="Wrap" Text="{Binding CurrentMod.Description}" VerticalAlignment="Top" Height="231" Width="400" RenderTransformOrigin="0.5,0.5" FontSize="15">

        </TextBlock>

    </Grid>
</Window>
