<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:BionicleHeroesModManager.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="using:BionicleHeroesModManager.Views"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="720"
        x:Class="BionicleHeroesModManager.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Canopus"
		WindowStartupLocation="CenterScreen"
		TransparencyLevelHint="AcrylicBlur"
		Background="Transparent">

	<Design.DataContext>
		<vm:MainWindowViewModel/>
	</Design.DataContext>

	<TabControl>
		
		<!--Play Tab-->
		<TabItem Header="Play" VerticalContentAlignment="Center">
			<!--Mod ScrollViewer-->
			<local:ModPlayView/>
		</TabItem>
		
		<!--Download Tab-->
		<TabItem Header="Download" VerticalContentAlignment="Center">
			<local:ModDownloadView/>
		</TabItem>

		<!--Settings Tab-->
		<TabItem Header="Settings" VerticalContentAlignment="Center">
			<local:SettingsView/>
		</TabItem>


	</TabControl>
</Window>
